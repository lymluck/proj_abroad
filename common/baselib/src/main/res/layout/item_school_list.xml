<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/llyt_type_name"
        layout="@layout/item_home_search_title"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:background="@drawable/bg_ring_with_solid_gray"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/iv_add_school"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@id/iv_add_school"
            android:layout_toRightOf="@id/iv_logo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/app_text_color2"
                android:textSize="@dimen/app_text_size1" />

            <TextView
                android:id="@+id/tv_English_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size3" />

            <LinearLayout
                android:id="@+id/llyt_home_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size2" />

                <TextView
                    android:id="@+id/tv_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/app_text_color2"
                    android:textSize="@dimen/app_text_size2" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llyt_smart_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_smart_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size2" />

                <TextView
                    android:id="@+id/tv_local_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_text_size2" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>