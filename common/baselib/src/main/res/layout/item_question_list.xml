<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        android:id="@+id/llyt_type_name"
        layout="@layout/item_home_search_title"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:id="@+id/llyt_qa_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/iv_asker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_default_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_home_qa_oval_gray"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_size3"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_qa_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/app_text_color2"
                android:textSize="@dimen/app_text_size3" />

            <LinearLayout
                android:id="@+id/ll_tag"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_qa_country_tag"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_size5" />

                <TextView
                    android:id="@+id/tv_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/bg_qa_degree_tag"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_size5" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text=""
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size5" />

            <View
                android:id="@+id/line"
                style="@style/vertical_line"
                android:layout_width="1dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="3dp"
                android:background="@color/app_text_color3" />

            <TextView
                android:id="@+id/tv_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_see"
                android:drawablePadding="2dp"
                android:text=""
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size5"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

                <View
                    android:id="@+id/v_cricle"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/bg_circle_answer"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_answer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_text_size5" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_home_list"
            style="@style/horizontal_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="-3.5dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/llyt_answer_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11.5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_qa_home_list"
                android:drawablePadding="6dp"
                android:ellipsize="end"
                android:maxWidth="150dp"
                android:singleLine="true"
                android:textColor="@color/app_main_color"
                android:textSize="@dimen/app_text_size5" />

            <View
                style="@style/vertical_line"
                android:layout_width="1dp"
                android:layout_margin="3.5dp"
                android:background="@color/app_text_color3" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size5" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llyt_schooln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="11.5dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_school"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_circle_qa_img" />

            <TextView
                android:id="@+id/tv_school_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@color/app_main_color"
                android:textSize="@dimen/app_text_size5" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>