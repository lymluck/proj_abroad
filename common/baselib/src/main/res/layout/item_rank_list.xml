<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_item_bg"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="17dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.smartstudy.commonlib.ui.customView.autoFitTextView.AutofitTextView
            android:id="@+id/tv_school_rank"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ellipsize="end"
            android:lines="1"
            android:text="#"
            android:textColor="@color/app_text_color"
            android:textSize="10sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/app_text_color2"
        android:textSize="@dimen/app_text_size1" />
</LinearLayout>