<?xml version="1.0" encoding="utf-8"?><!-- 全局通栏按钮背景样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 填充颜色 -->
            <solid android:color="@color/app_main_color80" />
            <!-- 线的宽度，颜色灰色 -->
            <stroke android:width="1px" android:color="@color/main_bg" />
            <!-- 矩形的圆角半径 -->
            <corners android:radius="6dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/app_main_color" />

            <stroke android:width="1px" android:color="@color/white30" />

            <corners android:radius="6dp" />

            <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp" />
        </shape>
    </item>

</selector>