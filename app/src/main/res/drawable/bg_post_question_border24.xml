<?xml version="1.0" encoding="utf-8"?><!-- 全局通栏按钮背景样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>

            <!-- 填充颜色 -->
            <solid android:color="#CCFFB400" />
            <!-- 线的宽度，颜色灰色 -->
            <corners android:radius="24.5dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFB400" />

            <corners android:radius="24.5dp" />
        </shape>
    </item>

</selector>