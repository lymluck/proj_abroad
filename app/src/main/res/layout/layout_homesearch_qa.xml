<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_item_bg"
    android:clickable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp">

            <RelativeLayout
                android:layout_width="32dp"
                android:layout_height="32dp">

                <ImageView
                    android:id="@+id/iv_asker"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/tv_qa_default_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_home_qa_oval_gray"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_text_size3"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_qa_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textColor="@color/app_text_color2"
                android:textSize="@dimen/app_text_size3"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp"
            android:maxLines="3"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tv_qa_see"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_see"
                android:drawablePadding="2dp"
                android:text="3815人看过"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_main_tab_textsize" />

            <TextView
                android:id="@+id/tv_qa_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_main_tab_textsize" />
        </LinearLayout>
    </LinearLayout>

    <View
        style="@style/horizontal_line"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />
</LinearLayout>
