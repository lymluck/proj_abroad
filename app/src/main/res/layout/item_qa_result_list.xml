<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@color/app_main_color" />

        <TextView
            android:id="@+id/tv_fit_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textColor="@color/app_text_color2"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_fit_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="5dp"
        android:padding="16dp"
        android:textColor="@color/app_text_color2"
        android:textSize="@dimen/app_text_size2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="可参考填报："
        android:textColor="@color/app_text_color2"
        android:textSize="@dimen/app_text_size2"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_fit_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5dp"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/app_text_color2"
        android:textSize="@dimen/app_text_size2" />

    <View
        android:id="@+id/rst_line"
        style="@style/horizontal_line"
        android:layout_marginLeft="16dp" />
</LinearLayout>