<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <include layout="@layout/layout_high_school_header_grid" />

    <LinearLayout
        android:id="@+id/llyt_rank_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="18dp"
        android:paddingTop="20dp"
        android:visibility="gone">

        <include layout="@layout/layout_recommend" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:id="@+id/tv_type_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:text="热门排名"
                android:textColor="@color/app_text_color2"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_see_more_rank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_home_arrow_rg"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:text="查看更多"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_home_rank_hot"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:background="@color/white"
        android:paddingBottom="20dp"
        android:visibility="gone" />
</LinearLayout>