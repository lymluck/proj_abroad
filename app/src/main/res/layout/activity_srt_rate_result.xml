<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.smartstudy.xxd.ui.activity.SrtRateResultActivity">

    <include layout="@layout/app_top_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_school_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:elevation="8dp" />

                <TextView
                    android:id="@+id/tv_chineseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/app_text_color2"
                    android:textSize="@dimen/app_text_size1" />

                <TextView
                    android:id="@+id/tv_englishName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size4" />

                <View
                    style="@style/horizontal_line"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp" />

                <TextView
                    android:id="@+id/tv_for_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="哈佛大学对你来说"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size3" />

                <TextView
                    android:id="@+id/tv_rate_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="18dp"
                    android:textSize="22sp" />

                <RatingBar
                    android:id="@+id/rb_rate"
                    style="@style/fiveRatingBar_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:numStars="5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:layout_marginTop="40dp"
                    android:gravity="center">

                    <com.smartstudy.commonlib.ui.customView.CircleProgressView
                        android:id="@+id/cpv_user_rate"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginRight="30dp" />

                    <com.smartstudy.commonlib.ui.customView.CircleProgressView
                        android:id="@+id/cpv_avg_rate"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="30dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="成绩点评"
                    android:textColor="@color/app_text_color2"
                    android:textSize="@dimen/app_text_size1" />

                <View style="@style/horizontal_line" />


                <TextView
                    android:id="@+id/tv_eg_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/app_text_color2"
                    android:textSize="@dimen/app_textsize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_eg_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/app_text_color1"
                    android:textSize="@dimen/app_text_size2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_eg_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_text_size2"
                    android:visibility="gone" />

                <View
                    android:id="@+id/view_test_line"
                    style="@style/horizontal_line"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_test_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/app_text_color2"
                    android:textSize="@dimen/app_textsize"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_test_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="4dp"
                    android:textColor="@color/app_text_color1"
                    android:textSize="@dimen/app_text_size2"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_test_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/white"
                    android:textColor="@color/app_main_color"
                    android:textSize="@dimen/app_text_size2"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="说明：测试结果仅供参考，如果对测试结果或者选校有任何疑问，欢迎咨询选校帝留学顾问！"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_rst_share"
                    style="@style/app_onebtn"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_green_btn_radius"
                    android:text="分享" />

                <Button
                    android:id="@+id/btn_rst_ask"
                    style="@style/app_onebtn"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="24dp"
                    android:layout_weight="1"
                    android:text="在线咨询" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
