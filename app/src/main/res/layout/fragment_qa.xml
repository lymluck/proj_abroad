<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/top_qa"
        layout="@layout/app_top_default" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srlt_qa"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.smartstudy.commonlib.ui.customview.LoadMoreRecyclerView
                android:id="@+id/rclv_qa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/app_top_height" />

            <include
                android:id="@+id/searchView"
                layout="@layout/layout_search_btn"
                android:visibility="invisible" />
        </FrameLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>

