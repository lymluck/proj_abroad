<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/simple_item_bg">

    <TextView
        android:id="@+id/tv_school_rank"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:background="#24BEE4"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="@dimen/app_text_size4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_major_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size1" />

        <TextView
            android:id="@+id/tv_school"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size4" />

        <TextView
            android:id="@+id/tv_school_eg_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/app_text_size5" />
    </LinearLayout>
</LinearLayout>