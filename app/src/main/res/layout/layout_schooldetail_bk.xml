<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_go_bk"
            android:text="本科申请"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size1" />

    </LinearLayout>

    <View style="@style/horizontal_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_bk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:scrollbars="none" />

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="录取信息"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="留学费用"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="考试要求"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="院校信息"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="申请材料"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="申请流程"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_more_bk"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_app_trans_btn_blue_border70"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="@color/app_main_color"
            android:textSize="@dimen/app_text_size2" />

    </LinearLayout>
</LinearLayout>
