<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_go_intro"
            android:text="学校简介"
            android:textColor="@color/app_text_color2"
            android:textSize="@dimen/app_text_size1" />

    </LinearLayout>

    <View style="@style/horizontal_line" />

    <TextView
        android:id="@+id/tv_school_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:ellipsize="end"
        android:lineSpacingExtra="6dp"
        android:maxLines="9"
        android:paddingBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/app_text_color1"
        android:textSize="@dimen/app_textsize" />

    <View style="@style/horizontal_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="基本信息"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="院校数据"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="招生信息"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="教学特色"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="院系设置"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

            <View
                style="@style/vertical_line"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="专业信息"
                android:textColor="@color/app_text_color"
                android:textSize="@dimen/app_text_size4" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_more_intro"
            android:layout_width="132dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/bg_app_trans_btn_green_border70"
            android:gravity="center"
            android:text="查看更多"
            android:textColor="@color/green_btn_color"
            android:textSize="@dimen/app_text_size2" />

    </LinearLayout>
</LinearLayout>
