<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/bg_oval_red_size"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="37dp"
            android:text="冲刺" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_mid"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/bg_oval_blue_size"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="37dp"
            android:text="核心" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_bottom"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/bg_oval_green_size"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="37dp"
            android:text="保底" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_del"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/simple_item_bg"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginLeft="29dp"
            android:background="@drawable/bg_oval_gray_size"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="37dp"
            android:text="删除" />
    </LinearLayout>

</LinearLayout>

