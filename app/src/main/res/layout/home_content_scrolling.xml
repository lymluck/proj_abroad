<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nsv_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlyt_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llyt_home_course"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="留学课程"
                    android:textColor="@color/app_text_color2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_see_more_course"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_home_arrow_rg"
                    android:gravity="center_vertical"
                    android:text="查看更多"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size4" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_home_course"
                android:layout_marginBottom="20dp"
                android:paddingTop="12dp" />

            <View
                style="@style/horizontal_line"
                android:layout_below="@id/rcv_course"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llyt_home_news"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="留学资讯"
                    android:textColor="@color/app_text_color2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_see_more_news"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_home_arrow_rg"
                    android:gravity="center_vertical"
                    android:text="查看更多"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size4" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_home_news" />

            <View
                style="@style/horizontal_line"
                android:layout_below="@id/rcv_new"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlyt_qa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/llyt_qa"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="留学问问"
                    android:textColor="@color/app_text_color2"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_see_more_qa"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_home_arrow_rg"
                    android:gravity="center_vertical"
                    android:text="查看更多"
                    android:textColor="@color/app_text_color"
                    android:textSize="@dimen/app_text_size4" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcv_qa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/llyt_qa" />

            <View
                style="@style/horizontal_line"
                android:layout_below="@id/rcv_qa"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>